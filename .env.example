# Email Search Service v2.0 Configuration

# Flask настройки
FLASK_ENV=production
FLASK_DEBUG=False
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# JWT секретный ключ (ОБЯЗАТЕЛЬНО измените в production!)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# База данных
DATABASE_PATH=data/email_search.db

# Поисковые API (опционально)
# Google Custom Search API
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_google_search_engine_id_here

# Bing Search API (optional)
BING_API_KEY=your_bing_api_key_here

# Scopus API (для работы с научными публикациями)
SCOPUS_API_KEY=your_scopus_api_key_here

# ORCID API (для работы с профилями исследователей)
ORCID_CLIENT_ID=your_orcid_client_id_here
ORCID_CLIENT_SECRET=your_orcid_client_secret_here

# Логирование
LOG_LEVEL=INFO
LOG_FILE=data/logs/app.log

# Rate Limiting настройки
RATE_LIMIT_STORAGE_URL=sqlite:///data/rate_limits.db

# Кэширование
CACHE_DEFAULT_TIMEOUT=86400  # 24 часа в секундах
CACHE_MAX_ENTRIES=10000

# Мониторинг
MONITORING_ENABLED=True
METRICS_RETENTION_DAYS=30

# Безопасность
BCRYPT_LOG_ROUNDS=12
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True

# CORS настройки
CORS_ORIGINS=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-API-Key

# Администратор по умолчанию (создается при первом запуске)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=change-this-password

# Внешние сервисы
WEBHOOK_URL=
NOTIFICATION_EMAIL=
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

